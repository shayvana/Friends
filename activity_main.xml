<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="0dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Puppies"
        android:textSize="40.0sp"
        android:textStyle="bold"
        android:layout_marginTop = "0dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on a puppy to know more about them: "
        android:textAlignment="center" />

    <!--
    GridView
    -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:columnCount="2"
        android:rowCount="6">

    <ImageButton
        android:id="@+id/puppy1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickPuppy"
        android:src="@drawable/puppy1" />

    <ImageButton
        android:id="@+id/puppy2button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickPuppy"
        android:src="@drawable/puppy2" />
    </GridLayout>
</LinearLayout>
